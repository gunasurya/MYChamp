@page
@model MYChamp.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/Auth_css/register.css" />
<div class="container mt-5 bordered">
    <h1 class="text-center">@ViewData["Title"]</h1> <!-- Add register title -->
    <div class="row justify-content-center align-items-center">
        <div class="col-md-12">

            <div class="text-danger" asp-validation-summary="All"></div>
            <form method="post" class="border p-4 border-gray border-2 rounded-1">
                <div class="row">
                    <div class="col mb-3">
                        <label asp-for="Register.FirstName" class="form-label"><h6>FirstName</h6></label>
                        <input type="text" asp-for="Register.FirstName" class="form-control" />
                        <span asp-validation-for="Register.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col mb-3">
                        <label asp-for="Register.MiddleName" class="form-label"><h6>MiddleName</h6></label>
                        <input type="text" asp-for="Register.MiddleName" class="form-control" />
                        <span asp-validation-for="Register.MiddleName" class="text-danger"></span>
                    </div>

                    <div class="col mb-3">
                        <label asp-for="Register.LastName" class="form-label"><h6>LastName</h6></label>
                        <input type="text" asp-for="Register.LastName" class="form-control" />
                        <span asp-validation-for="Register.LastName" class="text-danger"></span>
                    </div>

                </div>

                <div class="mb-3">
                    <label asp-for="Register.UserId" class="form-label"><h6>UserName</h6></label>
                    <input type="text" asp-for="Register.UserId" class="form-control" />
                    <span asp-validation-for="Register.UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Register.Email" class="form-label"><h6>Email</h6></label>
                    <input type="email" asp-for="Register.Email" class="form-control" />
                    <span asp-validation-for="Register.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Register.Password" class="form-label"><h6>Password</h6></label>
                    <input type="password" asp-for="Register.Password" class="form-control" />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Register.ConfirmPassword" class="form-label"><h6>Confirm Password</h6></label>
                    <input type="password" asp-for="Register.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Register.Address" class="form-label"><h6>Address</h6></label>
                    <input type="text" asp-for="Register.Address" class="form-control" />
                    <span asp-validation-for="Register.Address" c lass="text-danger"></span>
                </div>
                <div class="row mb-3 py-4">
                    <div class="col-6 text-center">
                        <span class="text-primary">Already have Account</span><a asp-page="/Auth/Login" class="btn"><span class="text-dark">Login</span></a>

                    </div>
                    <div class="col-6 text-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


<!-- Success modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Registration Successful</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Congratulations! Your registration was successful.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="/Index" class="btn btn-primary">Continue</a> <!-- Redirect to index page -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
            <partial name="_ValidationScriptsPartial" />
    }

    <script>
      
            $(document).ready(function () {
                $('form').on('submit', function (event) {
                    event.preventDefault(); 

                    var formData = {
                        FirstName: $('input[name="Register.FirstName"]').val(),
                        MiddleName: $('input[name="Register.MiddleName"]').val(),
                        LastName: $('input[name="Register.LastName"]').val(),
                        UserId: $('input[name="Register.UserId"]').val(),
                        Email: $('input[name="Register.Email"]').val(),
                        Password: $('input[name="Register.Password"]').val(),
                        ConfirmPassword: $('input[name="Register.ConfirmPassword"]').val(),
                        Address: $('input[name="Register.Address"]').val()
                    };

                    fetch('/auth/register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    })
                        .then(response => {
                            if (response.ok)
                            { 
                                $('#successModal').modal('show');
                            }
                             else {
                                response.json().then(data => {
                                    $('.text-danger').text('');
                                    for (var key in data.errors) {
                                        $('span[asp-validation-for="Register.' + key + '"]').text(data.errors[key][0]);
                                    }
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                });
            });


    </script>
}
