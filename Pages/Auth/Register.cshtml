@page
@model MYChamp.Pages.Auth.RegisterModel
@using MYChamp.AuthModel

@{
    ViewData["Title"] = "Register"; 
}

<link rel="stylesheet" href="~/css/Auth_css/register.css" />
<div class="container mt-5 bordered">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-9">
            <div class="text-danger" asp-validation-summary="All"></div>
            <form method="post" class="border p-4 border-gray border-2 rounded-1">
                <div class="mb-3 form-floating">
                    <input type="text" asp-for="_register.FirstName" class="form-control @(ViewData.ModelState[""]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="FirstName" />
                    <label asp-for="_register.FirstName" class="form-label"><h6>FirstName</h6></label>
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model._register.FirstName)
                    </div>
                   
                </div>  
                <div class="row">
                    <div class="col-6">
                        <div class="mb-3 form-floating">
                            <input type="text" asp-for="_register.MiddleName" class="form-control" placeholder="MiddleName" />
                            <label asp-for="_register.MiddleName" class="form-label"><h6>MiddleName</h6></label>

                            <span asp-validation-for="_register.MiddleName" class="text-danger"></span>
                        </div>


                    </div>
                    <div class="col-6">
                        <div class="mb-3 form-floating">
                            <input type="text" asp-for="_register.LastName" class="form-control" placeholder="LastName" />
                            <label asp-for="_register.LastName" class="form-label"><h6>LastName</h6></label>

                            <span asp-validation-for="_register.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-6">
                        <div class="mb-3 form-floating">
                            <input type="email" asp-for="_register.EmailId" class="form-control" placeholder="Email" />
                            <label asp-for="_register.EmailId" class="form-label"><h6>Email</h6></label>

                            <span asp-validation-for="_register.EmailId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3 form-floating">
                            <input type="text" asp-for="_register.PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                            <label asp-for="_register.PhoneNumber" class="form-label"><h6>PhoneNumber</h6></label>

                            <span asp-validation-for="_register.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="mb-3 form-floating">
                            <input type="password" asp-for="_register.Password" class="form-control" placeholder="Password" />
                            <label asp-for="_register.Password" class="form-label"><h6>Password</h6></label>

                            <span asp-validation-for="_register.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3 form-floating">
                            <input type="password" asp-for="_register.confirmpassword" class="form-control" placeholder="Confirm Password" />
                            <label asp-for="_register.confirmpassword" class="form-label"><h6>Confirm Password</h6></label>

                            <span asp-validation-for="_register.confirmpassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
    
                <div class="row mb-3 py-4">
                    <div class="col-6 text-center ">
                        <span class="text-primary">Already have Account</span><a asp-page="/Auth/Login" class="btn btn-danger"><span class="text-dark">Login</span></a>
                       
                    </div>
                    <div class="col-6 text-center">
                        <button type="submit" class="btn btn-primary form-control">Register</button>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
